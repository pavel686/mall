<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
						http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">

    <!-- 页面拦截规则 -->
    <!-- 
        pattern 代表拦截路径
          /* 当前目录，不代表下级目录
          /**  包含下级目录
        access 访问需要的角色
    
     -->
    <!-- 以下页面不被拦截 -->
	<http pattern="/*.html" security="none"></http>
	<http pattern="/css/**" security="none"></http>
	<http pattern="/img/**" security="none"></http>
	<http pattern="/js/**" security="none"></http>
	<http pattern="/plugins/**" security="none"></http>
	<http pattern="/seller/add.do" security="none"></http>
	
	
	<http>
		<intercept-url pattern="/**" access="hasRole('ROLE_SELLER')" />
		<!-- 
		   login-page 指定的登录页面
		   default-target-url 登录成功之后，跳转的页面
		   authentication-failure-url 登录失败，跳转的页面
		 -->
		<form-login login-page="/shoplogin.html" default-target-url="/admin/index.html"
			 authentication-failure-url="/shoplogin.html" always-use-default-target="true"/>	
			 <!-- 关掉跨站访问 -->
			 <csrf disabled="true"/>
			 <!-- 让页面中支持iframe标签 -->
	    <logout logout-url="/logout" logout-success-url="/login.html"/>
		<headers>
			<frame-options policy="SAMEORIGIN"/>
		</headers>
	</http>
	

  
	<!-- 认证管理器 -->
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsServiceImpl">
		  <password-encoder ref="bcryptEncoder"></password-encoder>
		</authentication-provider>	
	</authentication-manager>
	
	<dubbo:application name="mall-seller-web" />
	<dubbo:registry address="zookeeper://192.168.0.137:2181"/>
	<dubbo:reference id="sellerService"  interface="com.cblue.sellergoods.service.SellerService" >
	</dubbo:reference>
	<beans:bean id="userDetailsServiceImpl" class="com.cblue.seller.service.UserDetailsServiceImpl">
	   <beans:property name="sellerService" ref="sellerService"></beans:property>
	</beans:bean>
	<beans:bean id="bcryptEncoder"  
        class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	
	
	
	
		
</beans:beans>